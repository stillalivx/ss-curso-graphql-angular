{
  "name": "book-store-api",
  "version": "1.0.0",
  "description": "Proyecto inicial para aprender las bases de GraphQL mediante practica",
  "main": "build/app.js",
  "scripts": {
    "start": "node build/app.js",
    "build": "npx tsc -p . && npx src/schema build/schema",
    "dev": "nodemon \"src/app.ts\" --exec \"ts-node\" \"src/app.ts\" -e ts,graphql,json",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix"
  },
  "keywords": [
    "graphql",
    "graphql-basic",
    "unions",
    "query",
    "mutation",
    "book-store",
    "apollo-server-express-3"
  ],
  "author": "Jared Pe√±a Ochoa <jaredpenaochoa@outlook.com>",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/load-files": "^7.0.0",
    "apollo-server-express": "^3.12.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import-node": "^0.0.5",
    "graphql-tools": "^8.3.20",
    "ncp": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/node": "^20.3.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1"
  }
}
