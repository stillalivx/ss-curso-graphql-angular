/* eslint-env node */
{
  "root": true,
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "quotes": [ "error", "single" ],
    "semi": ["error", "always"],
    "@typescript-eslint/no-explicit-any": ["error", {
      "fixToUnknown": true
    }],
    "curly": "error"
  }
}